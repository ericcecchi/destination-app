<% provide(:title, 'Log in') %>
<%= render 'shared/main' do %>
  <%= render 'shared/main_heading', classes: "text-center"  do %>
    Log in
  <% end %>

  <div class="sm:max-w-sm mx-auto mt-10">
      <%= form_with url: login_path, scope: :session, local: true do |f| %>
        <div class="flex flex-col">
          <%= f.label :email%>
          <%= f.email_field :email, class: "mb-4"  %>

          <%= f.label :password %>
          <%= f.password_field :password, class: "mb-4"  %>

          <%= f.label :remember_me, class: "mb-4" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>


          <%= f.submit "Log in", class: "btn btn-primary" %>

          <p class="mt-5 text-center">New user? <%= link_to "Sign up now.", signup_path %></p>
        </div>
      <% end %>
  </div>
<% end %>
