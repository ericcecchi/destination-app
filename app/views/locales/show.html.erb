<% provide(:title, "Guides - #{@locale.name}") %>

<div class="max-w-7xl mx-auto">
  <header style="background-image: url('<%= @locale.image_url %>'); height: 25rem; background-size: cover;">
    <div class="w-full h-full flex flex-col justify-end" style="background-color: rgba(0, 0, 0, .3);">
      <div class="dark:bg-mulberry-800 bg-mulberry-50 pt-4 px-4 sm:pt-6 sm:px-6 lg:pt-8 lg:px-8 w-max">
        <%= render 'shared/main_heading' do %>
          <%= @locale.name %>
        <% end %>
      </div>
    </div>
  </header>
  <p class="text-lg p-4 sm:p-6 lg:p-8 w-full dark:bg-mulberry-800 bg-mulberry-50"><%= @locale.content %></p>

  <%= render 'shared/main' do %>
    <div class="mt-10">
      <%= will_paginate @guides %>
    </div>

    <ul class="grid grid-cols-2 md:grid-cols-3 gap-4">
      <%= render @guides, template: 'guides/guide' %>
    </ul>

    <div class="mt-10">
      <%= will_paginate @guides %>
    </div>
  <% end %>
</div>
