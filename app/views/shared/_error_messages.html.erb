<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="p-3 rounded-md my-4 <%= flash_styles(:danger) %>">
      The form contains <%= pluralize(@user.errors.count, "error") %>:
      <ul class="list-inside list-disc mt-2">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
