<%= form_with model: @user, local: true do |f| %>
  <div class="flex flex-col">
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "mb-4" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "mb-4" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "mb-4" %>

    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, class: "mb-4" %>


    <%= f.submit local_assigns[:button_label] ? button_label : "Create my account", class: "btn btn-primary" %>
  </div>
<% end %>
