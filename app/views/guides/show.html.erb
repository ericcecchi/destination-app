<% provide :title, @guide.title %>

<div class="max-w-7xl mx-auto">
  <header style="background-image: url('<%= @guide.image_url %>'); background-size: cover; height: 30rem; background-position: top center;">
    <div class="w-full h-full flex flex-col justify-end" style="background-color: rgba(0, 0, 0, .3);">
      <div class="dark:bg-mulberry-800 min-w-1/4 bg-mulberry-50 pt-4 pl-4 pr-12 sm:pt-6 -mb-2 pb-2 sm:pl-6 lg:pt-8 lg:pl-8 min-w-1/3 md:max-w-[50%] max-w-[75%]">
        <h6 class="font-bold text-lg mb-1 text-black">Guide</h6>
        <%= render 'shared/main_heading' do %>
          <%= @guide.title %>
        <% end %>
        <h3 class="mt-2 md:text-xl text-md flex items-center justify-start gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
          <a href="<%= destination_path @guide.destination %>">
            <%= @guide.destination.name %>
          </a>
        </h3>
      </div>
    </div>
  </header>
  <p class="text-lg p-4 sm:p-6 lg:p-8 pb-0 w-full dark:bg-mulberry-800 bg-mulberry-50"><%= @guide.description %></p>
  <div class="bg-mulberry-50 text-md font-bold p-4 sm:p-6 lg:p-8 w-full">
    <a href="<%= user_path @guide.user %>" class="flex">
      <%= gravatar_for @guide.user, size: 32, class_name: 'self-center' %>
      <p class="ml-2 mt-1"><%= @guide.user.name %></p>
    </a>
  </div>

  <%= render 'shared/main' do %>
    <div class="mt-10">
      <%= will_paginate @recommendations %>
    </div>

    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      <%= render @recommendations, template: 'recommendations/recommendation' %>
    </ul>

    <div class="mt-10">
      <%= will_paginate @recommendations %>
    </div>
  <% end %>
</div>
