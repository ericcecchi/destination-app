<% provide(:title, 'Reset password') %>
<%= render 'shared/main' do %>
  <%= render 'shared/main_heading', classes: "text-center"  do %>
    Forgot password
  <% end %>

  <div class="sm:max-w-sm mx-auto mt-10">
    <%= form_with url: password_resets_path, scope: :password_reset, local: true do |f| %>
      <div class="flex flex-col">
        <%= f.label :email%>
        <%= f.email_field :email, class: "mb-4"  %>

        <%= f.submit "Send reset link", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
<% end %>
