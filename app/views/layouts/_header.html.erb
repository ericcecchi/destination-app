  <!-- Mobile menu, show/hide based on menu state. -->
  <div data-dropdown-target="menu" class="hidden sm:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
      <%= link_to "Home", root_path, class: "bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium" %>
      <%= link_to "Help", help_path, class: "bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium" %>
    </div>
  </div>
