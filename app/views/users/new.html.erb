<% provide(:title, 'Sign up') %>
<%= render 'shared/main' do %>
  <%= render 'shared/main_heading', classes: 'text-center' do %>
    Sign up
  <% end %>

  <div class="sm:max-w-sm mt-10 mx-auto">
      <%= form_with model: @user, local: true do |f| %>
        <div class="flex flex-col">
          <%= render 'shared/error_messages' %>

          <%= f.label :name %>
          <%= f.text_field :name, class: "mb-4" %>

          <%= f.label :email %>
          <%= f.email_field :email, class: "mb-4" %>

          <%= f.label :password %>
          <%= f.password_field :password, class: "mb-4" %>

          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, class: "mb-4" %>

          <%= f.submit "Create my account", class: "btn btn-primary" %>

          <p class="mt-5 text-center">Already have an account? <%= link_to "Log in.", login_path %></p>
        </div>
      <% end %>
  </div>
<% end %>
