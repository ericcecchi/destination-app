<li class="transition-transform shadow-lg hover:shadow-2xl hover:-translate-y-1 dark:bg-gray-900 dark:hover:bg-gray-800 border-2 rounded-lg border-gray-500 ">
  <%= link_to user, class: "p-5 flex flex-col justify-center items-center" do %>
    <div class="rounded-full overflow-hidden w-32 mb-4">
      <%= gravatar_for user %>
    </div>
    <h2 class="font-bold text-lg"><%= user.name %></h2>
  <% end %>

  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete the user #{user.name}?" }, class: "mb-5 mx-5 btn btn-secondary btn-sm block text-center" %>
  <% end %>
</li>
